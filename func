#include<stdio.h>  
 int main()    
{    
int n,i=0, reverse=0, rem;    
printf("Enter a number: ");    
  scanf("%d", &n);    
  //while(n!=0)
for(i=1;i<=n;i++)	  
  {    
     rem=n%10;    
     reverse=reverse*10+rem;    
     n/=10;    
  }    
  printf("Reversed Number: %d",reverse);    
return 0;  
}   
